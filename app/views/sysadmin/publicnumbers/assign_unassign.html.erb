<div class="block">
	<div class="secondary-navigation">
		<ul class="wat-cf">
			<li class="first">
				<%= link_to "#{t("web-app-theme.list", :default => t("views.links.list"))}", sysadmin_publicnumbers_path  %>
			</li>
			<li class="first">
				<%= link_to "#{t("web-app-theme.list", :default => t("views.links.add"))}", new_sysadmin_publicnumber_path %>
			</li>
			<li class="first active">
				<%= link_to "#{t("web-app-theme.list", :default => t("views.links.assign_unassign"))}", assign_unassign_sysadmin_publicnumbers_path %>
			</li>
		</ul>
	</div>
	<div class="content">		
		<br> 
		<div class="inner" style="width:50%">

		<table id="sortableTable" class="tablesorter">
				<thead>
					<tr>
						<th><%= t("views.titles.name")%></th>
						<th class="last"><%= t("views.titles.action")%></th>
					</tr>
				</thead>
				<tbody>
					<% @serviceproviders.each do |serviceprovider| -%>
					<tr class="<%= cycle("odd", "even") %>">
						<td class="first"> <%= serviceprovider["name"]%> </td>
						
						<td><%= link_to "#{t("web-app-theme.edit", :default => t("views.links.assign"))}",  assign_sysadmin_publicnumber_path(serviceprovider["uid"], :serviceprovider_name=> serviceprovider["name"])%>&nbsp;|&nbsp;<%= link_to "#{t("web-app-theme.edit", :default => t("views.links.unassign"))}",  unassign_sysadmin_publicnumber_path(serviceprovider["uid"],:serviceprovider_name=> serviceprovider["name"])%> </td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
