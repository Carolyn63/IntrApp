<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", employees_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_employee_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", employee_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.employee.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @employee.user_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.employee.company_id", :default => t("activerecord.labels.company_id", :default => "Company")) %>:</b>
          <%= @employee.company_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.employee.status", :default => t("activerecord.labels.status", :default => "Status")) %>:</b>
          <%= @employee.status %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_employee_path(@employee), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", employee_path(@employee), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>