<div class="auth-box login-box">
  <div class="head tac">
    <h1><%= t("views.password_resets.reset_password") %></h1>
    <p><%= t("views.password_resets.please_enter_your_email") %></p>
  </div>
  <% form_tag password_resets_path, :class => :signup  do -%>
    <div class="input-row">
      <label><span><%= t("views.users.email_or_username") %><b class="green-color fz14">&nbsp;*</b></span></label>
      <%= text_field_tag :email, t("views.users.enter_your_user_name"), :placeholder => t("views.users.enter_your_user_name") %>
    </div>
    <div class="input-row" >
      <%= link_to t("views.password_resets.return_to_sign_in"), login_path, :class=>"link", :style=>"right: 317px;"%>
    </div>
    <div class="input-row button-row">
      <label>&nbsp;</label>
      <button class="max-button" type="submit"><b class="f"></b><b class="s"><%= t("views.password_resets.reset_password") %></b><b class="t"></b></button>
    </div>
  <% end -%>
</div>