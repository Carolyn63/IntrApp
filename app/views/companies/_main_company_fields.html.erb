<div class="container">
  <h3 class="mt20"><%= t("views.companies.company_information") %></h3>
  <div class="input-row">
    <label><span><%= t("views.companies.name") %><b class="green-color fz14">&nbsp;*</b></span></label>
    <%= f.text_field :name %>
  </div>
  <div class="input-row">
    <label><span><%= t("views.companies.address") %></span></label>
		<%# We've changed the address field into a row, rather than having it as a text field %>
    <%= f.text_field :address %>
  </div>
    <div class="input-row">
    <label><span><%= t("views.companies.address2") %></span></label>
    <%= f.text_field :address2%>
  </div>
  <div class="input-row">
    <label><span><%= t("views.companies.city") %></span></label>
    <%= f.text_field :city %>
  </div>
  	<div class="input-row">
    	<label><span><%= t("views.companies.state") %></span></label>
	    <%= f.text_field :state %>
	  </div>
 <div class="input-row">
    <label><span><%= t("views.companies.country") %></span></label>
      <%= f.select :country, enterprise_countries, :selected => @company.country%>
  </div>
    <div class="input-row">
    <label><span><%= t("views.companies.zipcode") %></span></label>
    <%= f.text_field :zipcode %>
  </div>
  <div class="input-row">
    <label><span><%= t("views.companies.country_phone_code") %></span></label>
    <%= f.select :country_phone_code, country_phone_code %>
  </div>
  <div class="input-row">
    <label><span><%= t("views.companies.phone") %></span></label>
    <%= f.text_field :phone %>
  </div>
  <div class="input-row">
    <label><span><%= t("views.companies.website") %></span></label>
    <%= f.text_field :website %>
  </div>
  <div class="input-row">
    <label><span><%= t("views.companies.domain") %><b class="green-color fz14">&nbsp;*</b></span></label>
    <%= f.text_field :domain_name%>
  </div>
  <div class="input-row">
    <label><span><%= t("views.companies.twitter") %></span></label>
    <%= f.text_field :twitter , :placeholder => " format http://www.twitter.com/otogo"%> 
  </div>

  <div class="input-row">
    <label><span><%= t("views.companies.facebook") %></span></label>
    <%= f.text_field :facebook , :placeholder => " format http://www.facebook.com/otogo"%>
  </div>
  <div class="input-row">
    <label><span><%= t("views.companies.linkedin") %></span></label>
    <%= f.text_field :linkedin , :placeholder => "format http://www.linkedin.com/company/2679523"%>
  </div>

  <div class="input-row">
    <label><span><%= t("views.companies.company_type") %></span></label>
    <%= f.text_field :company_type %>
  </div>
  <div class="input-row">
    <label><span><%= t("views.companies.industry") %></span></label>
    <%= f.select :industry, company_industries %>
  </div>
  <div class="input-row">
    <label><span><%= t("views.companies.size") %></span></label>
    <%= f.text_field :size %>
  </div>
  <div class="input-row">
    <label><span><%= t("views.companies.team") %></span></label>
    <%= f.text_field :team %>
  </div>
	<%# Phone codes removed as they are stored in the database %>
  <div class="input-row">
    <label><span><%= t("views.companies.privacy") %></span></label>
    <%= f.select :privacy, Company::Privacy::LIST %>
  </div>
  <div class="input-row">
    <label><span><%= t("views.required_fields") %><b class="green-color fz14">&nbsp;*</b></span></label>
  </div>
</div><!-- .container -->

    
