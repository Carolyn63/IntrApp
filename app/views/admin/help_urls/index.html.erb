<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_help_urls_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_help_url_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("views.help_urls.help_urls_title") %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"></th>
          <%= sortable_table_header :name => t("views.help_urls.name"), :sort => "name" %>
          <%= sortable_table_header :name => t("views.help_urls.portal_url"),  :sort => "portal_url" %>
          <%= sortable_table_header :name => t("views.help_urls.help_system_url"),  :sort => "help_url" %>
          <%= sortable_table_header :name => t("views.help_urls.date"),  :sort => "date" %>
          <th class="last">&nbsp;</th>
        </tr>
        <% @help_urls.each do |help_url| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>&nbsp;</td>
          <td><%= link_to help_url.name, admin_help_url_path(help_url) %></td>
          <td><%= h(help_url.portal_url)%></td>
          <td><%= h(help_url.help_url)%></td>
          <td><%= help_url.created_at %></td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_help_url_path(help_url) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_help_url_path(help_url) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_help_url_path(help_url), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @help_urls  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
