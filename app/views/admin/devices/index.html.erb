<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to_collection %></li>
      <li><%= link_to_new_resource %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> <%= pluralized_resource_class_name %></h2>
    <div class="admin-filter">
      <%# <% form_tag "", {:method => :get} do %>
      <%#   <span>Name</span>
      <%#   <%= text_field_tag("search", params[:search], :id => "resource_search") %>
      <%#   <%= submit_tag "Search" %>
      <%# <% end %>
    </div>
    <div class="inner">
      <table class="table">
        <tr>
          <%= sortable_table_header :name => 'Id',  :sort => "id", :class => "first" %>
          <%= sortable_table_header :name => 'Name',  :sort => "name" %>
          <%= sortable_table_header :name => 'Applications count',  :sort => "applications_count" %>
          <%= sortable_table_header :name => 'Employees count',  :sort => "employees_count" %>
          <%= sortable_table_header :name => 'Description', :sort => "description" %>
          <th class="last">&nbsp;</th>
        </tr>
        <% collection.each do |device| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td class="first"><%= device.id %></td>
          <td><%= device.name %></td>
          <td><%= link_to device.applications_count, admin_applications_path(:device_id => device) %></td>
          <td><%= device.employees_count %></td>
          <td><%= device.description %></td>
          <td class="last">
            <%= link_to_show device %> |
            <%= link_to_edit device -%> |
            <%= link_to_delete device -%>
          </td>
        </tr>
        <% end -%>
      </table>
      <%= will_paginate collection, :status => params[:status], :search => params[:search]  %>
      <div class="actions-bar wat-cf">
        <div class="actions"></div>
      </div>
    </div>
  </div>
</div>
