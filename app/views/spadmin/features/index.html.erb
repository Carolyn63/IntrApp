<div class="block">
	<div class="secondary-navigation">
		<ul class="wat-cf">
			<li class="first active">
				<%= link_to "#{t("web-app-theme.list", :default => t("views.links.list"))}", spadmin_features_path  %>
			</li>
		</ul>
	</div>
	<div class="content">
		<br>
		<div class="admin-filter"></div>
		<div class="inner" style="width:50%">
			<table id="sortableTable" class="tablesorter">
				<thead>
					<tr>
						<th><%= t("views.titles.name")%></th>
						<th><%= t("views.titles.featureCode")%></th>
						<th><%= t("views.titles.description")%></th>
					</tr>
				</thead>
				<tbody>
					<% @features.each do |feature| -%>
					<tr class="<%= cycle("odd", "even") %>">
						<td align="left"> <%= feature["name"]%> </td>
						<td align="left"> <%= feature["featureCode"]%> </td>
						<td align="left" class="right-column"> <%= feature["description"]%> </td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<div class="actions-bar wat-cf">
				<div class="actions"></div>
			</div>
		</div>
	</div>
