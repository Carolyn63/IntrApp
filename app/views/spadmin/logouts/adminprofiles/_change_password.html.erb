<script type="text/javascript" charset="utf-8">
$(function() {
$('input#submit_change_password').click(function() {
if($('input#password').val()=="") {
alert("Please enter password.");
return false;
}
if($('input#confirm_password').val()=="") {
alert("Please enter confirm password.");
return false;
}
/*
 if($('input#confirm_password').val()!=$('input#password').val()) {
 alert("Passwords do not match.");
 return false;
 }
 */
$('form#change_password').submit();
});
$('input#cancel_change_password').click(function() {
$('div#change_password_div').hide();
hideOverlay();
});
});

</script>
<div style="font-size:16px;font-weight:bold;text-align:center;padding:10px;">
	Change Password
</div>
<% form_for :change_password, :url =>spadmin_adminprofile_path(@uid), :html => { :class => :form } do |f| -%>
<input type="hidden" name="_method" value="put" />
<%= hidden_field("emailId", "id", :value=>@emailId)%>
<table align="left" cellspacing="10" cellpadding="10" border="0" style="font-size:12px;width:500px;">
	<tr valign="top">
		<td align="right" style="width:200px;"><%= f.label :label_address1, t("views.spadmin.adminprofiles.admin_password"), :class => :label %></td>
		<td align="left" style="padding-left:10px;"><%= f.password_field :password,  :value => @password %></td>
	</tr>
	<tr valign="top">
		<td align="right" style="width:200px;"><%= f.label :label_address1, t("views.spadmin.adminprofiles.admin_re_password"), :class => :label %></td>
		<td align="left" style="padding-left:10px;"><%= f.password_field :re_password, :value => @re_password %></td>
	</tr>
	<tr valign="top">
		<td colspan="2" align="center" style="padding-top:10px;">
		<input type="submit" id="submit_change_password" name="commit" value="Change" />
		&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		<input type="button" id="cancel_change_password" name="commit" value="Cancel"  />
		</td>
	</tr>
</table>
<%end%>

