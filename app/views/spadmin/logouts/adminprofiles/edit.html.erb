<script type="text/javascript" charset="utf-8">
	$(function() {
	$('a#change_password').click(function() {
	var div_id='change_password_div';
	if($('div#change_password_div').is(':hidden')) {
	showOverlay(div_id);
	$('div#change_password_div').html('<div style="position:absolute;top:40%;left:50%;margin:0 0 0 -25px;"><img src="/images/loading.gif" width="32" height="32" /></div>').load('../change_password/'+<%= @uid%>, {});
$('div#change_password_div').show();
} else {
$('div#change_password_div').hide();
}
});
});
</script>
<div class="block">
	<div class="secondary-navigation">
		<ul class="wat-cf">
			<li >
				<%= link_to "#{t("web-app-theme.list", :default => "Profile")}", spadmin_adminprofile_path %>
			</li>
			<li class="first active">
				<%= link_to "#{t("web-app-theme.list", :default => "Edit")}", edit_spadmin_adminprofile_path(@uid)  %>
			</li>
		</ul>
	</div>
	<div class="content">
		<h2 class="title"><%= t("web-app-theme.new", :default => "Service Provider Admin Profile")%> </h2>
		<div class="inner">
			<a href="javascript:void(0)" id="change_password">change password</a>
			<div id="change_password_div" class="popup" style="width:500px;height:150px;"></div>
			<% form_for :edit_profile, :url => spadmin_adminprofile_path(@uid), :html => { :class => :form } do |f| -%>
			<input type="hidden" name="_method" value="put" />
			<%= render :partial => "form", :locals => {:f => f} %>
			<% end -%>
		</div>
	</div>
</div>
