<li>
  <div class="img-box">
    <%= image_tag friend_accepted_request.user.avatar.url(:thumb), :class => "img-mini-box-logo" %>
  </div>
  <div class="right-box">
    <div class="left">
      <p class="first-row"><span class="title"><b><%= link_to friend_accepted_request.user.name, user_path(friend_accepted_request.user) %></b></span></p>
      <% company = friend_accepted_request.user.top_company %>
      <%= render :partial => "shared/company_name_and_profile_link", :locals => {:company => company} %>
      <p>
        <span class="float-left">
          <%= join_fields_with_pipe((company.blank? ? "" : company.employee(friend_accepted_request.user).department_name), friend_accepted_request.user.job_title ) %>
        </span>
      </p>
    </div>
    <div class="right">
      <%= link_to link_name(t("views.go_see_profile")), user_path(friend_accepted_request.user), :class => "standart-button" %>
    </div>
    <div class="clear"></div>
  </div>
</li>