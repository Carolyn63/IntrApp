<script type="text/javascript" charset="utf-8">
		$(function() {
	$('a#change_password').click(function() {
	var div_id='change_password_div';
	if($('div#change_password_div').is(':hidden')) {
	showOverlay(div_id);
	$('div#change_password_div').html('<div style="position:absolute;top:40%;left:50%;margin:0 0 0 -25px;"><img src="/images/loading.gif" width="32" height="32" /></div>').load('../change_password/'+<%= @uid%>, {emailId:'<%= @emailId%>', loginName:'<%= @loginName%>'});
		$('div#change_password_div').show();
		} else {
			$('div#change_password_div').hide();
		}
		});
		});
</script>
<div class="block">
	<div class="secondary-navigation">
