				<p style="font-size:1.3em;line-height:150%"><%=simple_format(@application.basic_plan.description)%></p>
			</div>
			<div style="margin-top:10px;">
				<%=content_tag(:span, link_to(link_name(t("views.users.thanks2")), user_application_path(current_user.id, @application.id),:class => 'standart-button'))%></h3>
