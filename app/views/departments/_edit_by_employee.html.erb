<% form_remote_for :employee, :url => update_by_employee_company_employee_path(@company,@employee), :html => {:method => :put, :id => "edit_by_employee_form"} do |f| -%>
  <%= error_messages_for :employee %>
  <div class="employees-box">
    <h3><%= image_tag("down_grey_arrow.png") %><%= "&nbsp;&nbsp;#{t("views.departments.edit_department", :company => @department.company.name)}" %></h3>
      <% if @department.owner_depts? %>
        <div class="input-row">
          <label><span><%= t("views.departments.name") %></span></label>
          <%= f.text_field :name :value => @department.name %>
        </div>
      <%else%>
       <div class="input-row">
        <label><span><%= t("views.department.description")  %></span></label>
        <%= h(@department.name) %>
      </div>
        <div class="input-row">
          <label><span><%= t("views.companies.job_title") %></span></label>
          <%= h(@department.description) %>
        </div>
    <%end%>
    <div class="clear"></div>
  </div>
  <div class="tac">
    <%= link_to_function link_name(t("views.save")), "$('#edit_by_employee_form').hide();$('#loader').show();$('#submit').click();", :class=>"standart-button" %>
    <%= submit_tag '', :id => "submit", :style => "display:none" %>
  </div>
<% end -%>

<div id="loader" style="display:none">
  <%=  image_tag "loadingAnimation.gif"%>
</div>
