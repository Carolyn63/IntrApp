<div class="content left-column">
  <div class="clear"></div>
  <%= render :partial => "nav_menu" %>
  <div class="right-wide-side employees-container">
    <%= error_messages_for :department %>
    <% form_for :department, :url => company_department_path(@company,@department), :html => {:method => :put, :id => "new_department" } do |f| -%>
      <div class="employee-box">
        <h3><%= image_tag("down_grey_arrow.png") %><%= "&nbsp;&nbsp;#{t("views.departments.edit_department", :name => @company.departments.name)}" %></h3>
         <div class="input-row">
          <label><span><%= t("views.departments.name") %></span></label>
           <%= f.text_field :name %>
         </div>
          <div class="input-row">
            <label><span><%= t("views.departments.description") %></span></label>
            <%= f.text_field :description %>
          </div>	
				<div class="clear"></div>
      </div>
      <div class="bottom-gradient-box tac">
        <%= link_to_function link_name(t("views.departments.save_department")), "$('#new_department').submit()", :class=>"standart-button" %>
      </div>
    <% end -%>
  </div>
  <div class="clear"></div>
</div><!-- .content -->
