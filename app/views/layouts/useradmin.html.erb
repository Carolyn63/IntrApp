<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title><%= t("views.titles.useradmin")%></title>
	<link type="image/x-icon" href="/images/favicon.ico" rel="shortcut icon"/>
	<%= stylesheet_link_tag "web_app_theme", "web_app_theme_override", "themes/warehouse/style", :cache => true %>
	<%= stylesheet_link_tag "base", :media => "screen" %>
	<%= stylesheet_link_tag "jquery.autocomplete.css" %>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "jquery.autocomplete.js" %> <script language="JavaScript" type="text/javascript" src="/javascripts/jquery.js"></script>
	<script language="JavaScript" type="text/javascript" src="/javascripts/mt01.js"></script>
	<link rel="stylesheet" type="text/css" href="/stylesheets/mt01.css"/>
	<link rel="stylesheet" href="/stylesheets/tablesorter/style.css" type="text/css" id="" media="print, projection, screen" />
	<script type="text/javascript" src="/javascripts/jquery-latest.js"></script>
	<script type="text/javascript" src="/javascripts/jquery.tablesorter.js"></script>
	<script type="text/javascript">
			$(document).ready(function() {
		$("#sortableTable").tablesorter({widgets: ["zebra"]});
		});
	</script>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1 style="color:#fff;margin:20px 0;"><%= t("views.titles.useradmin") %></h1>
      <% if current_user %>
         <div id="user-navigation" align="right">
           <ul class="wat-cf">
             <li><%= link_to t("views.shared.login_menu.logout", :login => ""), useradmin_logouts_path %></li>
           </ul>
         </div>
         <%= render :partial => "shared/useradmin_main_menu" %>         
       <% end %>
    </div>    
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <%= yield %>
        <div id="footer">
          <div class="block">
								Copyright &copy; <%= Time.now.year %> <%= property(:copyright) %>
          </div>      
        </div>
      </div>
    </div>    
  </div>
  <script type="text/javascript" charset="utf-8">
$(function() {
$("a.standart-button").one("click", function() {
	    $(this).click(function () { return false; });
});
$("a.standart-button").one("click", function() {
	    $(this).click(function () { return false; });
});
$("a.button").one("click", function() {
	    $(this).click(function () { return false; });
});
$("input.wide-button").one("click", function() {
	    $(this).click(function () { return false; });
});
$("input.standart-button").one("click", function() {
	    $(this).click(function () { return false; });
});
$("input.button").one("click", function() {
	    $(this).click(function () { return false; });
});
$("button.wide-button").one("click", function() {
	    $(this).click(function () { return false; });
});
$("button.standart-button").one("click", function() {
	    $(this).click(function () { return false; });
});
$("button.button").one("click", function() {
	    $(this).click(function () { return false; });
});
});
</script>
</body>
</html>
