<% if current_user %>
  <div class="links-box">
    <div class="mt_button">
      <%= your_mobile_tribe %>
    </div>
    <div>
      <ul class="navi">
        <li><%= link_to t("views.shared.login_menu.account_setting"), edit_user_path(current_user) %></li>
        <li><%= link_to_function t("views.shared.login_menu.help"), help_system_window %></li>
        <li><%= link_to t("views.contact_us"), contact_us_support_path %></li>
        <li><%= link_to t("views.shared.login_menu.signout"), logout_path %></li>
      </ul>
      <div class="clear"></div>
      <p class="login-info"><%= t("views.shared.login_menu.login_as", :user => link_to(current_user.name, user_path(current_user)))%></p>
    </div>
  </div>
  <div class="clear"></div>
<% end %>
