<script type="text/javascript" charset="utf-8">
$(function() {
	$('a#change_password').click(function() {
		var div_id='change_password_div';
		if($('div#change_password_div').is(':hidden')) {
			showOverlay(div_id);
			$('div#change_password_div').html('<div style="position:absolute;top:40%;left:50%;margin:0 0 0 -25px;"><img src="/images/loading.gif" width="32" height="32" /></div>').load('../change_password/'+<%= @uid%>, {emailId:'<%= @emailId%>', loginName:'<%= @loginName%>'});
			$('div#change_password_div').show();
		} else {
			$('div#change_password_div').hide();
		}
	});
});
</script>
<div class="block">
	<div class="secondary-navigation">
		<ul class="wat-cf">
			<li class="first">
				<%= link_to "#{t("web-app-theme.list", :default => t("views.links.profile"))}", useradmin_profiles_path  %>
			</li>
			<li class="first active">
				<%= link_to "#{t("web-app-theme.list", :default => t("views.links.edit"))}", edit_useradmin_profile_path(@uid)  %>
			</li>
		</ul>
	</div>
	<div class="content">	
		<br> 	
		<div class="inner">
			<div style="width:110px;border: 4px double #FFFFFF;background-color:#DDDDDD" align="center">
				<a href="javascript:void(0)" id="change_password"><%=t("views.titles.change_password")%></a>
			</div>
			<div id="change_password_div" class="popup" style="width:500px;height:180px"></div>
			<% form_for :edit_profile, :url => useradmin_profile_path(@uid), :html => { :class => :form } do |f| -%>
			<input type="hidden" name="_method" value="put" />
			<%= render :partial => "form", :locals => {:f => f} %>
			<% end -%>
		</div>
	</div>
</div>
